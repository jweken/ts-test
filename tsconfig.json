        "outDir": "dist",
        "target": "ES2017",
        "module": "amd",
        "strictFunctionTypes": true,
        "removeComments": false,
        "sourceMap": false,
        "baseUrl": "src",
    },
    "include": [
        "**/*.js",
        "**/*.ts*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}